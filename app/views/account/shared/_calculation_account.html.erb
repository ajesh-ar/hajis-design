<table cellpadding="0" cellspacing="0" border="0" class="display table table-bordered dataTables_wrapper" id="accounts" role="grid" data-source="<%= accounts_path(format: :json) %>">
	<thead>
		<tr>
			<th>Customer Details</th>
			<th>Amount</th>
			<th>Balance Amount</th>
			<th>Date</th>
			<th>Utility</th>
		</tr>
	</thead>
	<tbody>
	</tbody>
</table>
<script type="text/javascript">
	$('#accounts').dataTable( {
		// jQueryUI: true,
		paginationType: "full_numbers",
		processing: true,
		serverSide: true,
		ajax: $('#accounts').data('source'),
		iDisplayLength: 5,
		aoColumns: [
	                { "bSortable": true },
	                { "bSortable": true },
	                { "bSortable": true },
	                { "bSortable": true },
	                { "bSortable": false }
               ]
	});
	
	$( "#sales_calender_date" ).datepicker({
  	dateFormat: 'dd/mm/yy'
  });
</script>